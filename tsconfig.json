{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"*": ["src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "example"]
}
